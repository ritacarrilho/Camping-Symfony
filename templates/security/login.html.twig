{%extends "base.html.twig" %} 
{% block title %}Log In{% endblock %}

{% block body %}
    <div>        
        {{ include("template_part/menu.html.twig", {pp: 'menu'} )}}
    </div>

    <div class="container mt-5">
        <h2>Log In</h2> 

        <div class="card w-50 m-auto">
            <div class="card-header">Connect yourself</div>
            <div class="card-body">
            {# connection error display #}
             {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey }}
                </div>
            {% endif %}


            <form action="{{ path('security_login') }}" class="form mt-4" method="post">
                <div class="form-group mb-3">
                    <input placeholder="Email address..." required id="username" name="_username" value="{{ lastUser }}" type="text" class="form-control">
                </div>
                <div class="form-group mb-3">
                    <input placeholder="Password..." required name="_password" id="password" type="password" class="form-control">
                </div>

                <div class="form-group justify-content-center">
                    <button type="submit" class="btn btn-success btn-sm me-3">Connect!</button>
                    <a href="{{ path('app_home') }}" class="btn btn-outline-warning btn-sm">Cancel</a>
                </div>
            </form>
        </div>
    </div>


{{ include("template_part/footer.html.twig", {pp: 'footer'} )}}

{% endblock %}